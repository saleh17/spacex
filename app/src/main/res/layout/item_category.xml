<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_semi_small"
    android:layout_marginEnd="@dimen/spacing_semi_small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/gold"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:paddingStart="@dimen/spacing_semi_normal"
        android:paddingEnd="@dimen/spacing_semi_normal"
        android:paddingTop="@dimen/spacing_semi_small"
        android:paddingBottom="@dimen/spacing_semi_small"
        android:textAllCaps="true"
        android:fontFamily="@font/lato_bold"
        android:id="@+id/nameTv"
        tools:background="@drawable/bgd_gold_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>